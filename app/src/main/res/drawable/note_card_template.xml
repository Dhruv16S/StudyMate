<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#995E9EF2" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Shape -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="10dp"
        android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#995E9EF2" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>
